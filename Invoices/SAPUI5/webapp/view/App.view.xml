<mvc:View   controllerName="logaligroup.SAPUI5.controller.App"
            xmlns="sap.m"
            xmlns:mvc="sap.ui.core.mvc"
            displayBlock="true">
    <Shell >            
        <App>        
            <pages>
                <Page title="{i18n>appTitle}">
                    <headerContent >
                        <Button id="helloDialogButton"
                        icon="sap-icon://action"
                        text="{i18n>showHelloDialogBut}"  
                        press=".onOpenDialog"
                        class="sapUiSmallMarginEnd"/>
                    </headerContent>
                    <content>
                        <mvc:XMLView viewName="logaligroup.SAPUI5.view.HelloPanel"/>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>    
</mvc:View>